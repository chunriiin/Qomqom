<html>
<div class="">
    <div class="community-title py-1" style="height:12vh;">
        <div class="d-flex ml-5">
            <div class="circle-com"></div>
            <div class="ml-3">
                <div class="p-0"><%= @community.name %></div>
                <a class="p-0"><%= @community.language %></a>
            </div>
        </div>
    </div>

    
    <div class="posts-box mt-5"style="display:flex;">
        <div class="text-center col-12 col-md-8">
            <div>
                <div class="card mx-auto p-0 mb-1">
                    <p>リンクを投稿してみよう</p>
                    <%= form_for([@community, @post]) do |f| %>
                        <div class="form-group px-5">
                            <%= f.text_field :body, class: "form-control" ,placeholder: "コメントする..."%>
                        </div>
                        <div class="form-group px-5">
                            <%= f.text_field :link, class: "form-control" ,placeholder: "URL"%>
                        </div>                        
                        <div class="form-group"><%= f.submit class: "btn btn-outline-danger",  title: ""%></div>
                    <% end %>
                </div>
            </div>
            <div class="posts">
                <% @community.posts.each do |p| %>
                    <div class="card mx-auto p-0 mb-1">
                        <div class="card-body d-flex p-0">
                            <div style="width:40px;background-color: #EEEEEE;"></div>
                            <div class="post-content p-2 col-10">
                                <div class="card-title post-box post-info1 d-flex m-0">
                                    <div class="circle m-1">
                                        <% if p.user.image.attached? %>
                                            <%= image_tag p.user.image, class:'profile-image', :size =>'50x50'%>
                                        <% end %>
                                    </div>
                                    <span class="mt-1">Posted by</span>
                                    <strong class="pt-1 px-1 posted-user"><%= link_to p.user.username, p.user %></strong>
                                    <a class="mt-1"><%= p.created_at %></a>  
                                </div>
                                <div class="d-flex">
                                    <div class="card-text text-left m-3">
                                        <div class="pb-3"><%= p.body.truncate(25) %></div>
                                        <div class="url_title p-2">     
                                            <strong><%= link_to p.url_title, p %></strong>
                                            <div class="url_des"><%= p.description %></div>
                                        </div>
                                        <div class="d-flex card-bottom">
                                            <strong class="px-2">Comment</strong>
                                            <strong class="px-2">Shere</strong>
                                            <strong class="px-2">Save</strong>
                                        </div>    
                                    </div>
                                    <div>
                                        <img class="url_image p-1 mt-2" src="<%= p.image %>" /> 
                                    </div>
                                </div>
                            </div>                          
                        </div>
                    </div>
                <% end %>  
                <% if @community.posts.count == 0 %>
                    <div class="card mx-auto p-0 mb-1 col-12" style="width: 85%;">
                        <div class="card-body p-0" style="display: flex;">
                            <div style="width:40px;background-color: #EEEEEE;"></div>
                            <div class="post-content p-2" style="width: 90%;">
                                <div class="card-text text-left ">
                                    <div class="url_title p-2">

                                    </div>
                                    <div class="d-flex card-bottom">
                                        <strong class="px-2">Comment</strong>
                                        <strong class="px-2">Shere</strong>
                                        <strong class="px-2">Save</strong>
                                    </div>    
                                </div>
                            </div>                   
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="card bg-light mb-3 d-lg-inline d-none mr-5 ml-0 float-right col-3 p-0" style="max-height: 20rem;">
            <div class="card-header">COMMUNITY DETAILS</div>
            <div class="card-body">
                <h4 class="card-title"><%= @community.name %></h4>
                <%= @community.body %>
                <%= button_to '参加する', community_join_path(@community), class:"btn btn-outline-danger m-auto" %>
                    <% @community.users.each do |u| %>
                        <div><%= link_to u.username, u %></div>
                    <% end %>
                    <%= link_to 'Edit', edit_community_path(@community) %> |
                    <%= link_to 'Back', communities_path %>
            </div>
        </div>
    </div>
</div>    

</html>


