<p id="notice"><%= notice %></p>
<div>
    <div class="text3" style="height:200px;">
        <h1><%= @community.name %><br>
        <%= @community.language %></h1>
    </div>    
        <%= button_to '参加する', community_join_path(@community), class:"btn btn-outline-danger m-auto "%>
    <hr> 
    <div class="text-center" style="width: 30%;">
        <%= form_for([@community, @post]) do |f| %>
            <div class="form-group">
                <label for="title">Title</label>
                <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
                <label for="link">Link</label>
                <%= f.text_field :link, class: "form-control" %>
            </div>
            <div class="form-group">
                <label for="body">Body</label>
                <%= f.text_field :body, class: "form-control" %>
            </div>
            <div class="form-group"><%= f.submit class: "btn btn-primary",  title: ""%></div>
        <% end %>

       
        
        <div class="col-12">
            <% @community.posts.each do |p| %>
                <div class="card mx-auto" style="width: 70%;">
                    <div class="card-body">
                        <h5><%= link_to p.title, p %></h5>
                        <span><%= link_to p.user.username, p.user %></span>
                        <p><%= p.body.truncate(25) %></p>
                    </div>
                </div>
            <% end %>
        </div>


    </div>

    <%= link_to 'Edit', edit_community_path(@community) %> |
        <%= link_to 'Back', communities_path %>

        <%= button_to '参加する', community_join_path(@community), class:"btn btn-outline-success my-2 my-sm-0" %>

        <h5>subscribed users</h5>
        <% @community.users.each do |u| %>
            <div><%= link_to u.username, u %></div>
        <% end %>
</div>


