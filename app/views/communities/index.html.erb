<p id="notice"><%= notice %></p>

<h1>Communities</h1>

<div class="row">
  <% @communities.each do |community| %>
    <div class="col-4" style="width: 18rem; padding: 10px 20px;">
      <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= link_to community.name, community %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= link_to 'Edit', edit_community_path(community) %></h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the cards content.</p>
        <a href="#" class="card-link"><%= link_to 'Edit', edit_community_path(community) %></a>
        <a href="#" class="card-link"><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' } %></a>
      </div>
      </div>
    </div>
  <% end %>
</div>

