<div class="">
    <div class="user-show-top d-flex">
        <div class="user-show-bg p-0 mx-auto"></div>
    </div>
    <div class="user-title py-1" style="height:10vh;">
        <div class="user-title-box d-flex mx-auto">
            <div class="">
                <% if @user.image.attached? %>
                <%= image_tag @user.image, class:'profile-image p-1', :size =>'80x80'%>
                <% end %>
            </div>
            <div class="ml-3 mt-4 d-flex">
                <div class="p-0"><%= @user.username %></div>
                <%= button_to 'フォロー', "", class:"btn btn-outline-danger ml-5" %>
            </div>
        </div>
    </div>

    <div class="posts-box mt-5 mx-auto d-flex">
        <div class="text-center col-12 col-md-8">
            <div class="posts">
                <% @user.posts.each do |p| %>
                    <div class="card mx-auto p-0 mb-1">
                        <div class="card-body d-flex p-0">
                            <div style="width:40px;background-color: #EEEEEE;"></div>
                            <div class="post-content p-2 col-10">
                                <div class="card-title post-box post-info1 d-flex m-0">
                                    <div class="m-1">
                                        <% if p.user.image.attached? %>
                                            <%= image_tag p.user.image, class:'profile-image', :size =>'50x50'%>
                                        <% end %>
                                    </div>
                                    <span class="mt-1">Posted by</span>
                                    <strong class="pt-1 px-1 posted-user"><%= link_to p.user.username, p.user %></strong>
                                    <a class="mt-1"><%= p.created_at %></a>  
                                </div>
                                <div class="d-flex">
                                    <div class="card-text text-left m-3">
                                        <div class="pb-3"><%= p.body.truncate(25) %></div>
                                        <div class="url_title p-2">     
                                            <strong><%= link_to p.url_title, p %></strong>
                                            <div class="url_des"><%= p.description %></div>
                                        </div>
                                        <div class="d-flex card-bottom">
                                            <strong class="px-2"><%= link_to "Comment", p %></strong>
                                            <strong class="px-2">Shere</strong>
                                            <strong class="px-2">Save</strong>
                                        </div>    
                                    </div>
                                    <div>
                                        <img class="url_image p-1 mt-2" src="<%= p.image %>" /> 
                                    </div>
                                </div>
                            </div>                          
                        </div>
                    </div>
                <% end %>  
                <% if @user.posts.count == 0 %>
                    <div class="card mx-auto p-0 mb-1 col-12" style="width: 85%;">
                        <div class="card-body p-0" style="display: flex;">
                            <div style="width:40px;background-color: #EEEEEE;"></div>
                            <div class="post-content p-2" style="width: 90%;">
                                <div class="card-text text-left ">
                                    <div class="url_title p-2">

                                    </div>
                                    <div class="d-flex card-bottom">
                                        <strong class="px-2"><%= link_to "Comment", p %></strong>
                                        <strong class="px-2">Shere</strong>
                                        <strong class="px-2">Save</strong>
                                    </div>    
                                </div>
                            </div>                   
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="card bg-light mb-3 d-lg-inline d-none mr-5 ml-0 float-right col-3 p-0">
            <div class="card-header">USER DETAILS</div>
            <div class="card-body community-details">
                <h4 class="card-title"><%= @user.username %></h4>
                使用する言語：<h6><%= @user.language %></h6>
                <div class="community-counter d-flex">
                    <div>
                        <strong>29</strong>
                        <div>Subscribers</div>
                    </div>
                    <div>
                    ｜
                    </div>
                    <div>
                        <strong>30</strong>
                        <div>Online</div>
                    </div>
                </div>
                <hr>
                <%= @user.introduction %>
                <hr>
                <%= link_to 'Edit', edit_user_registration_path(@user) %> |

            </div>
        </div>
    </div>
</div>
    
    









