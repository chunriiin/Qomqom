<div class="">
    <div class="community-title py-1" style="height:12vh;">
        <div class="d-flex">
        <% if @user.image.attached? %>
        <%= image_tag @user.image, class:'profile-image', :size =>'50x50'%>
        <% end %>
            <div class="ml-3">
                <div class="p-0"><%= @user.username %></div>
                <div class="p-0"><%= @user.language %></div>
                <div class="p-0"><%= @user.introduction %></div>
            </div>
            
            <div class="profile-btn m-1"><%= link_to "contact me", '', class:"btn btn-outline-danger" %></div>
            <div class="profile-btn m-1"><%= link_to "edit", 'edit', class:"btn btn-outline-danger" %></div>
            
        </div>
    </div>
    <div class="container post-container">
        <div class="row">
            <div class="col-12 col-lg-8 mx-auto mt-5">
                <div class="text-center">
                    <div class="posts">
                        <% @user.posts.each do |p| %>
                            <div class="card mx-auto p-0">
                                <div class="card-body p-0 d-flex">
                                    <div style="width:40px;background-color: #EEEEEE;"></div>
                                    <div class="post-content p-2">
                                        <div class="card-title d-flex post-box post-info1">
                                            <% if @user.image.attached? %>
                                                <%= image_tag @user.image, class:'profile-image', :size =>'50x50'%>
                                            <% end %>
                                            <strong class="mt-1 posted-user"><%= link_to p.community.name, p.community %></strong>
                                            <span class="mt-1">ãƒ»</span>
                                            <span class="mt-1 ">Posted by</span>
                                            <a class="mt-1 posted-user"><%= @user.username %></a>
                                            <a class="mt-1"><%= p.created_at %></a>  
                                        </div>
                                        <div class="card-text text-left">    
                                            <div class="pb-3"><%= p.body.truncate(25) %></div>
                                            <div class="url_title p-2">     
                                                <strong><%= link_to p.url_title, p %></strong>
                                                <div class="url_des"><%= p.description %></div>
                                            </div>
                                            <div class="d-flex card-bottom">
                                                <strong class="px-2">Comment</strong>
                                                <strong class="px-2">Shere</strong>
                                                <strong class="px-2">Save</strong>
                                            </div>
                                        </div>
                                    </div>
                                    <img class="url_image p-1 mt-2" src="<%= p.image %>" />                           
                                </div>
                            </div>   
                        <% end %>   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
    









